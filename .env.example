# ============================================================
# PicoClaw + MaxExtract Ops Bot (.env example)
# Minimal, production-oriented template
# ============================================================

# ============================================================
# Required: provider + Telegram + Coolify API
# ============================================================
PICOCLAW_PROVIDERS_OPENROUTER_API_KEY=sk-or-v1-xxx
PICOCLAW_CHANNELS_TELEGRAM_TOKEN=123456:ABC...
COOLIFY_API_URL=http://84.32.104.5:8000
COOLIFY_API_TOKEN=replace_with_coolify_token

# ============================================================
# Core defaults
# ============================================================
PICOCLAW_CHANNELS_TELEGRAM_ENABLED=true
PICOCLAW_AGENTS_DEFAULTS_MODEL=openrouter-auto
PICOCLAW_AGENTS_DEFAULTS_MAX_TOKENS=50000
PICOCLAW_AGENTS_DEFAULTS_TEMPERATURE=0.3
PICOCLAW_AGENTS_DEFAULTS_MAX_TOOL_ITERATIONS=20
PICOCLAW_AGENTS_DEFAULTS_RESTRICT_TO_WORKSPACE=false
PICOCLAW_GATEWAY_HOST=0.0.0.0
PICOCLAW_GATEWAY_PORT=18790
TZ=Europe/Rome

# ============================================================
# MaxExtract ops scripts (minimal)
# ============================================================
COOLIFY_CONTEXT=mycoolify
MAXEXTRACT_USE_SSH=1
MAXEXTRACT_SSH_TARGET=root@84.32.104.5

# ============================================================
# Optional: SSH tuning
# ============================================================
# MAXEXTRACT_SSH_PORT=22
# MAXEXTRACT_SSH_CONNECT_TIMEOUT=8
# MAXEXTRACT_SSH_STRICT=0

# ============================================================
# Optional: output override (scripts default to Telegram-friendly output)
# ============================================================
# MAXEXTRACT_OUTPUT_FORMAT=telegram

# ============================================================
# Optional: DB ranking inputs
# ============================================================
# DATABASE_URL=postgres://user:pass@host:5432/maxextract
# DATABASE_URL_PAPER=postgres://user:pass@host:5432/maxextract_paper
# DATABASE_URL_LIVE=postgres://user:pass@host:5432/maxextract_live
# MAXOPS_STARTING_CAPITAL_PAPER=200
# MAXOPS_STARTING_CAPITAL_LIVE=200

# ============================================================
# Optional: exec hardening
# ============================================================
# PICOCLAW_TOOLS_EXEC_ENABLE_DENY_PATTERNS=true
